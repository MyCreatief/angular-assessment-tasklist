{
  "scripts": {
    "prepare": "husky",
    "lint": "ng lint",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "vitest",
    "test:staged": "vitest --run --silent"
  },
  "devDependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.3.2"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "npm run lint",
      "npm run format:check",
      "npm run test:staged"
    ],
    "*.{html,scss,json,md}": [
      "npm run format:check"
    ]
  }
}
